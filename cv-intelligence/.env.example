# CV Intelligence - Environment Configuration
# Copy this file to .env and fill in your values

# ==================================================
# LAPTOP TESTING CONFIGURATION (Recommended Start)
# ==================================================

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=cv_documents
USE_LOCAL_QDRANT=false
# QDRANT_API_KEY=  # Optional: for production security

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Local Embeddings (CPU - for laptop testing)
USE_LOCAL_EMBEDDINGS=true
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Worker Configuration
WORKER_BATCH_SIZE=10

# OpenAI (Optional - for LLM queries only, not embeddings in testing mode)
OPENAI_API_KEY=sk-your-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o

# ==================================================
# PRODUCTION CONFIGURATION (After Testing)
# ==================================================
# Uncomment and update these when scaling to 90GB

# GPU Embeddings (for production)
# USE_LOCAL_EMBEDDINGS=true
# LOCAL_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
# EMBEDDING_DEVICE=cuda
# EMBEDDING_BATCH_SIZE=64

# Qdrant Cluster (for production)
# QDRANT_URL=http://qdrant-node-1:6333
# QDRANT_API_KEY=your-secure-api-key-here

# Worker Configuration (for production)
# WORKER_BATCH_SIZE=50

# ==================================================
# ALTERNATIVE: OpenAI Embeddings (if no GPU)
# ==================================================
# USE_LOCAL_EMBEDDINGS=false
# EMBEDDING_MODEL=text-embedding-3-small  # or text-embedding-3-large
# OPENAI_API_KEY=sk-your-api-key-here
